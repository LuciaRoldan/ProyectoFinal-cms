{
  "kind": "collectionType",
  "collectionName": "projects",
  "info": {
    "name": "Project"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "creation_date": {
      "type": "date"
    },
    "poster": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "author_refs": {
      "collection": "author-ref"
    },
    "supervisor_refs": {
      "collection": "supervisor-ref"
    },
    "category": {
      "model": "category"
    },
    "extra_content": {
      "type": "richtext"
    },
    "organization": {
      "model": "organization"
    },
    "tags": {
      "type": "component",
      "repeatable": true,
      "component": "array.tags"
    },
    "documentation": {
      "collection": "documentation"
    }
  }
}
