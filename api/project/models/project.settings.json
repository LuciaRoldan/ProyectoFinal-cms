{
  "kind": "collectionType",
  "collectionName": "projects",
  "info": {
    "name": "Project"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "subtitle": {
      "type": "string"
    },
    "summary": {
      "type": "richtext"
    },
    "description": {
      "type": "text"
    },
    "creationDate": {
      "type": "date"
    },
    "poster": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "authors": {
      "via": "projects",
      "collection": "author"
    },
    "supervisors": {
      "via": "projects",
      "collection": "supervisor"
    }
  }
}
