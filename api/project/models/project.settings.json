{
  "kind": "collectionType",
  "collectionName": "projects",
  "info": {
    "name": "Project"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "subtitle": {
      "type": "string"
    },
    "summary": {
      "type": "richtext"
    },
    "description": {
      "type": "text"
    },
    "creation_date": {
      "type": "date"
    },
    "poster": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "author_refs": {
      "via": "project",
      "collection": "author-ref"
    },
    "supervisor_refs": {
      "via": "project",
      "collection": "supervisor-ref"
    }
  }
}
