{
  "kind": "collectionType",
  "collectionName": "projects",
  "info": {
    "name": "Project"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": false
    },
    "creation_date": {
      "type": "date"
    },
    "picture": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "category": {
      "model": "category"
    },
    "extra_content": {
      "type": "richtext"
    },
    "organization": {
      "model": "organization"
    },
    "tags": {
      "type": "component",
      "repeatable": true,
      "component": "array.tags"
    },
    "documentation": {
      "collection": "documentation"
    },
    "authors": {
      "collection": "author",
      "via": "projects",
      "dominant": true
    },
    "supervisors": {
      "collection": "supervisor",
      "via": "projects",
      "dominant": true
    },
    "views": {
      "type": "integer",
      "default": 0
    },
    "project_keywords": {
      "collection": "keywords"
    },
    "recommendations": {
      "collection": "recommendation"
    },
    "drive_folder_id": {
      "type": "string",
      "private": true
    }
  }
}
