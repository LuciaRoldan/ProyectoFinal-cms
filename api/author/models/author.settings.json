{
  "kind": "collectionType",
  "collectionName": "authors",
  "info": {
    "name": "Author"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "username": {
      "type": "string"
    },
    "full_name": {
      "type": "string"
    },
    "organizations": {
      "collection": "organization",
      "via": "authors",
      "dominant": true
    },
    "profile_pic": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "projects": {
      "collection": "project",
      "via": "authors"
    },
    "socials": {
      "type": "component",
      "repeatable": true,
      "component": "array.social"
    },
    "mail": {
      "type": "string",
      "unique": true
    },
    "phone": {
      "type": "string"
    },
    "google_token": {
      "type": "string",
      "private": true,
      "unique": true,
      "required": true
    },
    "google_user_id": {
      "type": "string",
      "private": true,
      "required": true,
      "unique": true
    }
  }
}
